<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailInfoActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detailToolbar"
        app:title="Thông tin chi tiết"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/takenTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian chụp: "/>
        <TextView
            android:textColor="@color/blue"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/takenTimeLabel"
            android:id="@+id/dateTaken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Tháng 5, 2022"/>
        <TextView
            android:textColor="@color/blue"
            android:id="@+id/weekDay"
            android:layout_below="@id/takenTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/dateTaken"
            android:text="Chủ nhật"/>
        <TextView
            android:textColor="@color/blue"
            android:id="@+id/timeTaken"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/weekDay"
            android:layout_below="@id/dateTaken"
            android:text="21:30"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/infoLabel"
            android:text="Thông tin tập tin:"/>

        <TextView
            android:id="@+id/imageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/infoLabel"
            android:text="image.jqg"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageName"
            android:layout_alignLeft="@+id/imageName"
            android:text="143KB" />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_below="@id/imageName"
            android:layout_toRightOf="@+id/size"
            android:text="1024x1024"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resolution"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pathLabel"
            android:text="Thông tin tập tin:"/>
        <TextView
            android:textColor="@color/blue"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/pathLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/path"
            android:text="Download/image.jpg"/>
    </RelativeLayout>
</LinearLayout>